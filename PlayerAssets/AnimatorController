using UnityEngine;

public class EnemyAnimationController : MonoBehaviour
{
    private Animator animator;

    void Awake()
    {
        animator = GetComponent<Animator>();
        InitLayerWeights();
    }

    private void InitLayerWeights()
    {
        animator.SetLayerWeight(0, 1f); // Base Layer – Di chuyển
        animator.SetLayerWeight(1, 0f); // Upper Body – Tạm thời tắt
        animator.SetLayerWeight(2, 0f); // Death – tắt
    }

    // Chạy với Speed từ NavMeshAgent
    public void PlayRun(float speed)
    {
        animator.SetFloat("Speed", speed);
    }

    public void PlayAttack()
    {
        animator.SetTrigger("Attack");
    }

    public void PlayHit()
    {
        animator.SetTrigger("Hit");
    }

    public void PlayDeath()
    {
        animator.SetLayerWeight(0, 0f); // Tắt Base Layer
        animator.SetLayerWeight(1, 0f); // Tắt Upper Body Layer
        animator.SetLayerWeight(2, 1f); // Bật Death Layer
        animator.SetTrigger("Die");
    }
}
